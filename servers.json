{
    "servers": {
        "this": {
            "commands": {
                "update": "git pull"
            }
        },
        "nodejs": {
            "commands": {
                "setup": "npm --prefix ./nodejs install express",
                "run": "node nodejs/app.js &",
                "stop": "kill -9 $(lsof -i:6000 -t)"
            }
        },
        "uvicorn_fastapi": {
            "commands": {
                "run": "uvicorn uvicorn_fastapi.main:app --host 0.0.0.0 --port 8000 &",
                "stop": "kill -9 $(lsof -i:8000 -t)"
            }
        },
        "vue": {
            "commands": {
                "setup": "yarn install && npm --prefix ./vue i -D tailwindcss postcss autoprefixer && npm --prefix ./vue i -D daisyui@latest",
                "run": "npm --prefix ./vue run build -- --port 5000 &",
                "stop": "kill -9 $(lsof -i:5000 -t)"
            }
        }
    }
}