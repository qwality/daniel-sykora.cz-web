{
    "servers": {
        "this": {
            "commands": {
                "update": "git pull"
            }
        },
        "test": {
            "commands": {
                "run": "pwd",
                "stop": "echo 'daniel-sykora.cz/test stopped'"
            }
        },
        "nodejs": {
            "commands": {
                "setup": "npm --prefix ./nodejs install express",
                "run": "node nodejs/app.js &",
                "stop": "kill -9 $(lsof -i:6000 -t)"
            }
        },
        "fastapi": {
            "commands": {
                "run": "uvicorn fastapi.main:app --port 8000 &",
                "stop": "kill -9 $(lsof -i:8000 -t)"
            }
        }
    }
}